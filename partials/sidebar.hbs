<div class="sidebar text-right meta">
    <div class="published animated fadeInUp">
        <strong >Published <i class="icon-published"></i></strong>
        <time class="timeago" datetime="{{date format="YYYY-MM-DDTHH:mm:ssZ"}}" title="{{date format="MMMM D [']YY [at] H:mm"}}" class="icon-calendar">{{date timeago="true"}}</time>
    </div>
    <span class="separator animated fadeInUp">//</span>
    <div class="tags animated fadeInUp">
        {{#if tags}}
            <strong class="icon-tags">Tags</strong>
            {{tags separator=""}}
        {{/if}}
    </div>
</div>
